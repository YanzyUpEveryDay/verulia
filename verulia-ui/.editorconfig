# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 所有文件
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown文件
[*.md]
trim_trailing_whitespace = false

# JSON文件
[*.json]
indent_size = 2

# YAML文件
[*.{yml,yaml}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
